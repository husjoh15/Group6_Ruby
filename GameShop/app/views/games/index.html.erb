
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet2" href="Stylesheet.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="Overview.css">
  <title>GameShop</title>
</head>

<body id="body">
  <div id="wrapper-div">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand">GameShop</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><%= link_to 'Home', games_path %></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">

          <% if user_signed_in? %>
              <li><%= link_to 'Shopping cart', cart_index_path %></li>
              <li><%= link_to "Logout", destroy_user_session_path,method: :delete %></li>
          <% else %>
              <li><%= link_to 'Shopping cart', cart_index_path %></li>
              <li><%= link_to 'Login', new_user_session_path %></li>
          <% end %>


        </ul>
      </div>
    </nav>

    <form>

      <input id="searchbar" type="text" name="search" placeholder="Search games..">

    </form>

    <div id="sidebar-div">

      <h1>Hello</h1>

    </div>

    <div id="gamebox-wrapper">


      <table id="gamebox-div">
        <thead>

        </thead>

        <tbody>

          <% @games.each do |game| %>
            <div class="gamebox-div">
                <tr>
                  <td><%= image_tag game.image_url %></td>
                  <td>
                    <div id="gamebox-text"><%= game.name %></div>
                    <div class="description"><%= game.description %></div>
                    <div class="linkShow"><%= link_to 'Show', game %></div>
                    <div class="linkEdit"><%= link_to 'Edit', edit_game_path(game) %></div>
                    <div class="linkDestroy"><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></div>
                    <td>
                      <div class="price"><%= number_to_currency game.price, :unit => "kr" %></div>

                      <%= link_to 'Add to cart', cart_index_path, :class => "btn btn-success" %>

                    </td>
                  </td>
                </tr>
            </div>
          <% end %>

        </tbody>
      </table>

      <br>
      <%= link_to 'New Game', new_game_path %>

    </div>
  </div>
</body>


<br>

